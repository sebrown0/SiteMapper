              <Function isDefaultPass="true" />
            </Element>
            
            <!-- Has no tool tip -->
            <Element>
              <Details type="button" name="search" text="Search" fafa="fa fa-search"/>
              <Locator by="css" text="button[name='QBF1']"/>
